<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.praveen.todo.CompletedTodoFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <include
                android:id="@+id/completedViewPagerToolbar"
                layout="@layout/toolbar" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/completedViewPagerTodoTitle"
                android:background="@android:color/transparent"
                android:hint="@string/titleHint"
                android:textStyle="bold"
                android:paddingTop="11dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:editable="false"
                android:textSize="23dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/completedViewPagerTodoDetail"
                android:background="@android:color/transparent"
                android:ems="10"
                android:paddingTop="17dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingBottom="11dp"
                android:hint="@string/no_details"
                android:editable="false" />

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:paddingTop="11dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:textSize="23dp"
                android:editable="false"
                android:id="@+id/completedViewPagerTodoTitle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:paddingTop="17dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingBottom="11dp"
                android:editable="false"
                android:id="@+id/completedViewPagerTodoDetail"/>-->

        </LinearLayout>

    </ScrollView>

</FrameLayout>
